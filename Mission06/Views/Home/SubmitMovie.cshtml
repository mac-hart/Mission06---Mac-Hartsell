@model SubmitMovie

<h1>Movie Submission</h1>

<form method="post">

    <!-- Category -->
    <label for="category">Category:</label>
    <input type="text" id="category" name="category" required /><br />

    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required /><br />

    <!-- Year -->
    <label for="year">Year:</label>
    <input type="number" id="year" name="year" required /><br />

    <!-- Director -->
    <label for="director">Director:</label>
    <input type="text" id="director" name="director" required /><br />

    <!-- Rating -->
    <label for="rating">Rating:</label>
    <select id="rating" name="rating" required>
        <option value="">Select Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />

    <!-- Edited -->
    <label for="edited">Edited:</label>
    <input type="checkbox" id="edited" name="edited" value="true" /><br />

    <!-- Lent To -->
    <label for="lentTo">Lent To:</label>
    <input type="text" id="lentTo" name="lentTo" /><br />

    <!-- Notes -->
    <label for="notes">Notes:</label>
    <input type="text" id="notes" name="notes" maxlength="25" /><br />

    <input type="submit" value="Submit" />
</form>